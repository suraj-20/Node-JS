<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      .container {
        border: 1px solid gray;
        width: 25%;
        padding: 2rem;
      }

      .form-check {
        padding: 0;
      }

      .filter-type-heading {
        font-size: 1.3rem;
        font-weight: bold;
        color: rgb(9, 9, 84);
      }

      .sortOrder ul {
        list-style-type: none;
        padding: 0;
      }
    </style>
  </head>
  <body>
    <h1>Restaurant Filter</h1>
    <div class="filter-container">
      <h3>Filter</h3>
      <form action="/filter" method="get" class="d-flex flex-column gap-3">
        <div class="cuisine d-flex flex-column gap-1">
          <label class="filter-type-heading" for="cuisine">Cuisine:</label>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="North Indian"
              name="cuisine"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              North Indian
            </label>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="South Indian"
              name="cuisine"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              South Indian
            </label>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="Chinese"
              name="cuisine"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Chinese
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="Fast Food"
              name="cuisine"
              id="flexCheckChecked"
            />
            <label class="form-check-label" for="flexCheckChecked">
              Fast Food
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value="Street Food"
              name="cuisine"
              id="flexCheckChecked"
            />
            <label class="form-check-label" for="flexCheckChecked">
              Street Food
            </label>
          </div>
        </div>

        <div class="max-cost d-flex flex-column gap-1">
          <label class="filter-type-heading" for="maxCost">Max Cost:</label>
          <div class="form-check">
            <label
              ><input
                class="form-check-input"
                type="radio"
                name="maxCost"
                id="flexRadioDefault1"
                value="500"
              />
              ₹ 500
            </label>
          </div>
          <div class="form-check">
            <label
              ><input
                class="form-check-input"
                type="radio"
                name="maxCost"
                id="flexRadioDefault2"
                value="1000"
              />
              ₹ 1000
            </label>
          </div>
          <div class="form-check">
            <label
              ><input
                class="form-check-input"
                type="radio"
                name="maxCost"
                id="flexRadioDefault1"
                value="1500"
              />
              ₹ 1500
            </label>
          </div>

          <div class="form-check">
            <label
              ><input
                class="form-check-input"
                type="radio"
                name="minCost"
                id="flexRadioDefault1"
                value="2000"
              />
              ₹ 2000+
            </label>
          </div>
        </div>

        <div class="sortOrder d-flex flex-column gap-1">
          <label class="filter-type-heading" for="sortOrder">Sort Order:</label>

          <div class="form-check">
            <input
              type="radio"
              name="sortOrder"
              id="lowToHigh"
              value="lowToHigh"
            />
            <label for="lowToHigh">Low to High</label>
          </div>

          <div class="form-check">
            <input
              type="radio"
              name="sortOrder"
              id="highToLow"
              value="highToLow"
            />
            <label for="highToLow">High to Low</label>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Filter</button>
      </form>
    </div>

    <ul>
      <% for (const restaurant of restaurants) { %>
      <li>
        <%= restaurant.name %> - Cuisine: <%= restaurant.cuisine %>, Cost: <%=
        restaurant.costForTwo %>
      </li>
      <% } %>
    </ul>
  </body>
</html>
