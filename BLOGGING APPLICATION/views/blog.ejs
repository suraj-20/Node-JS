<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container mt-5 d-grid justify-content-center">
      <div class="cover-image">
        <img
          src="<%= blog.coverImageURL %>"
          alt="...coverImage"
          width="700px"
        />
      </div>
      <div class="title mt-3">
        <h1><%= blog.title %></h1>
      </div>
      <div class="blog-info mt-3">
        <p><%= blog.body %></p>
      </div>
    </div>

    <div class="container mt-5">
      <img src="<%= blog.createdBy.profileImageURL %>" width="70px" /> <%=
      blog.createdBy.fullName %>
    </div>

    <%- include("./partials/scripts.js") %>
  </body>
</html>
