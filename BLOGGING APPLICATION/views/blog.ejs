<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>Blog</title>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container mt-5 d-grid justify-content-center">
      <div class="cover-image">
        <img
          src="<%= blog.coverImageURL %>"
          alt="...coverImage"
          width="700px"
        />
      </div>
      <div class="title mt-3">
        <h1><%= blog.title %></h1>
      </div>
      <div class="blog-info mt-3">
        <p><%= blog.body %></p>
      </div>
    </div>

    <div class="container mt-5">
      <img src="<%= blog.createdBy.profileImageURL %>" width="70px" /> <%=
      blog.createdBy.fullName %>
    </div>

    <div class="container mt-4 mb-3">
      <h1>Comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
      <form method="post" action="/blog/comment/<%= blog._id %>">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
          />
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
      </form>
      <% } %>
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <img src="<%= comment.createdBy.profileImageURL %>" width="70px" /> <%=
        comment.createdBy.fullName %>
        <pre><%= comment.content %></pre>
        <% }) %>
      </div>
    </div>

    <%- include("./partials/scripts.js") %>
  </body>
</html>
