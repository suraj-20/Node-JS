<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs") %>
    <title>Home page</title>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container mt-4 d-flex flex-row">
      <% blogs.forEach(blog => { %>
      <div class="card mt-3 mx-auto" style="width: 18rem">
        <img src="<%= blog.coverImageURL %>" class="card-img-top"/>
        <div class="card-body">
          <h5 class="card-title"><%= blog.title %></h5>
          <p class="card-text">
            <%= blog.body %>
          </p>
          <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
      <% }) %>
    </div>

    <%- include("./partials/scripts.js") %>
  </body>
</html>
